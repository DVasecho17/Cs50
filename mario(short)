#include <stdio.h>
#include <cs50.h>

int main(void)
{
    int height;    
    int grid = 1 ;  

    do
    {
        height = get_int("Height :");
    }
    while (height <= 0 || height > 8);

    while (height >= 1)
    {
        int i, j;
        for (i = 0; i < height - 1; i++)
        {
            printf(" ");
        }

        for (j = 0; j < grid; j++)
        {
            printf("#");
        }
      
        printf("\n");
        grid++;
        height--;
    }
}
